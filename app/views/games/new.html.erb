<div class="container">
  <h1>New Game</h1>

  <div class="letter-blocks">
    <% @letters.each do |letter| %>
      <p><%= letter %></p>
    <% end %>
  </div>

  <form action="/score" method='post'>
  <h3>What is the longest word you can make?</h3>
    <div class='form-items'>
      <input type="text" name="word" id="word" placeholder='Your longest word'>
      <input type="submit" value="Play" id="submit">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>